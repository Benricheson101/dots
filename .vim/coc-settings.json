{
  // +-- JavaScript --+
  "javascript.validate.enable": false,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
  "javascript.format.semicolons": "insert",
  "javascript.format.enabled": true,
  "javascript.preferences.quoteStyle": "single",

  // +-- TypeScript --+
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
  "typescript.format.semicolons": "insert",
  "typescript.format.enabled": true,
  "typescript.preferences.quoteStyle": "single",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,

  // +-- Rust --+

  "rust-analyzer.diagnostics.disabled": [
    "inactive-code",
    "missing-unsafe",
    "unresolved-proc-macro"
  ],
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.inlayHints.enable": true,

  // +-- Rich Presence --+
  "rpc.detailsViewing": "Viewing {filename}",
  "rpc.lowerDetailsViewing": "Workspace: {workspace}",

  "rpc.detailsEditing": "Editing {filename}:{currentline}:{currentcolumn}",
  "rpc.lowerDetailsEditing": "Workspace: {workspace}",
  "rpc.workspaceElapsedTime": true,
  "rpc.checkIdle": false,
  "rpc.lowerDetailsIdle": "Probably dead",
  "rpc.smallImage": "hi",
  "rpc.problemsText": "{count}",
  "rpc.showProblems": false,
  "rpc.button.enable": true,
  "rpc.button.activeLabel": "View Repository",
  "rpc.button.inactiveUrl": "https://github.com/benricheson101",
  "rpc.button.inactiveLabel": "GitHub",

  // TailwindCSS
  "tailwindCSS.headwind.runOnSave": false,

  // +-- Python --+
  "python.pythonPath": "python3",

  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["hs", "lhs", "haskell"]
    }
  }
}

// vim:ft=jsonc
